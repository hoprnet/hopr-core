{
  "name": "@hoprnet/hopr-core",
  "version": "0.3.0",
  "description": "Privacy-preserving messaging protocol with incentivations for relay operators",
  "license": "GPL-3.0-only",
  "keywords": [
    "privacy",
    "web3",
    "messaging"
  ],
  "files": [
    "lib/src",
    "README.md"
  ],
  "engines": {
    "node": "^12",
    "yarn": "^1.22"
  },
  "homepage": "https://hopr.network",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoprnet/hopr-core.git"
  },
  "scripts": {
    "hopr": "ts-node -T chat/index.ts",
    "build": "yarn clean && tsc -p . --noEmit false",
    "clean": "rm -rf ./lib",
    "fundAccounts": "ts-node -T ./scripts/fundAccounts.ts",
    "test": "mocha --exit",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@hoprnet/hopr-utils": "0.1.3",
    "@nodeutils/defaults-deep": "~1.1.0",
    "abort-controller": "^3.0.0",
    "bignumber.js": "^9.0.0",
    "bs58": "^4.0.1",
    "chalk": "~4.0.0",
    "clear": "^0.1.0",
    "debug": "^4.1.1",
    "dotenv": "~8.2.0",
    "dotenv-expand": "^5.1.0",
    "figlet": "^1.2.4",
    "futoin-hkdf": "~1.3.2",
    "getopts": "~2.2.4",
    "ip-address": "^6.1.0",
    "it-pipe": "^1.1.0",
    "it-pushable": "^1.4.0",
    "leveldown": "~5.6.0",
    "levelup": "~4.4.0",
    "libp2p": "~0.27.6",
    "libp2p-crypto": "~0.17.6",
    "libp2p-kad-dht": "~0.18.7",
    "libp2p-mplex": "~0.9.5",
    "libp2p-secio": "^0.12.5",
    "libp2p-websockets": "~0.13.6",
    "ministun": "^1.0.3",
    "multiaddr": "^7.4.3",
    "multihashes": "~0.4.15",
    "peer-id": "~0.13.12",
    "peer-info": "~0.17.5",
    "read": "~1.0.7",
    "rlp": "~2.2.4",
    "secp256k1": "~4.0.1",
    "simple-peer": "~9.7.2",
    "ts-node": "^8.10.1",
    "wrtc": "~0.4.4"
  },
  "devDependencies": {
    "@hoprnet/hopr-core-connector-interface": "1.0.1-0",
    "@hoprnet/hopr-core-ethereum": "~0.0.2-dev.b46cf2c",
    "@hoprnet/hopr-core-polkadot": "https://github.com/hoprnet/hopr-core-polkadot.git",
    "@hoprnet/hopr-demo-seeds": "1.0.1",
    "@hoprnet/hopr-ethereum": "~0.3.2-dev.00cc125",
    "@types/bn.js": "^4.11.6",
    "@types/bs58": "^4.0.1",
    "@types/clear": "^0.1.0",
    "@types/debug": "^4.1.5",
    "@types/figlet": "^1.2.0",
    "@types/leveldown": "^4.0.2",
    "@types/levelup": "^4.3.0",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "~12",
    "@types/read": "^0.0.28",
    "@types/secp256k1": "~4.0.1",
    "@types/simple-peer": "^9.6.0",
    "husky": "^4.2.5",
    "memdown": "^5.1.0",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "typescript": "^3.9.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/network/transport/*.spec.ts",
    "require": "ts-node/register"
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  }
}
