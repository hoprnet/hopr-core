{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./lib",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "sourceMap": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": ["src/**/*.ts"]
}
