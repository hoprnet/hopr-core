{
  "name": "@hoprnet/hopr-protos",
  "version": "0.0.4-77dea00",
  "files": [
    "node/",
    "protos/**/*.proto",
    "README.md"
  ],
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "yarn clean && yarn build:protos && microbundle --entry protos/**/*.ts --output node --compress",
    "build:protos": "./node_modules/protoc/protoc/bin/protoc --plugin=node_modules/ts-proto/protoc-gen-ts_proto --ts_proto_out=. ./protos/*.proto",
    "clean": "rimraf node",
    "test": "echo '⚠️ No tests implemented'",
    "prepublishOnly": "yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://hoprnet.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoprnet/hopr-core.git"
  },
  "engines": {
    "node": "12.9.1",
    "yarn": "1.19.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "protobufjs": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^12.11.0",
    "microbundle": "^0.12.2",
    "protoc": "^1.0.4",
    "rimraf": "^3.0.2",
    "ts-proto": "^1.25.0",
    "typescript": "^3.9.6"
  }
}
