{
  "name": "@hoprnet/hopr-protos",
  "version": "0.0.4-77dea00",
  "files": [
    "node/",
    "web/",
    "protos/**/*.proto",
    "README.md"
  ],
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "yarn build:protos && yarn build:web",
    "build:web": "rimraf web && microbundle --entry web-src/**/*.js --output web --target web --compress --external none",
    "build:protos": "yarn build:protos:node && yarn build:protos:web",
    "build:protos:node": "rimraf node && mkdirp node && node ./scripts/generateNode.js",
    "build:protos:web": "rimraf web-src && mkdirp web-src && node ./scripts/generateWeb.js",
    "test": "echo '⚠️ No tests implemented'",
    "prepublishOnly": "yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://hoprnet.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoprnet/hopr-core.git"
  },
  "engines": {
    "node": "12.9.1",
    "yarn": "1"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.11.0",
    "glob": "^7.1.6",
    "grpc-tools": "^1.9.0",
    "microbundle": "^0.12.2",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "ts-protoc-gen": "^0.12.0",
    "typescript": "^3.9.6"
  }
}
