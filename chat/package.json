{
  "name": "@hoprnet/hopr-chat",
  "version": "1.0.1-refactor.974dafd",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "yarn clean && tsc -p . --noEmit false",
    "clean": "rimraf ./lib",
    "clean:build": "rimraf ./build",
    "clean:dist": "rimraf ./dist",
    "clean:all": "yarn clean && yarn clean:dist && yarn util:clean:all",
    "compile": "yarn clean:dist && ncc build index.ts -o dist",
    "nexe:macos": "rimraf dist/macos-hopr-chat && cd dist && nexe -i index.js -o macos-hopr-chat -t darwin-12.9.1",
    "package:macos": "yarn compile && copyfiles .env dist && bestzip node-macos.zip dist",
    "dist:macos": "",
    "test": "mocha --exit || echo '⚠️  Currently no tests available'",
    "util:clean:all": "rimraf .alice .bob",
    "util:create:alice": "mkdirp .alice && copyfiles -a lib/**/**/* .alice && copyfiles .env .alice/",
    "util:create:bob": "mkdirp .bob && copyfiles -a lib/**/**/* .bob && copyfiles .env .bob/",
    "start": "node lib/index.js",
    "start:alice": "yarn util:create:alice && cd .alice && cross-env HOST_IPV4=0.0.0.0:9091 node lib/index.js -p alice",
    "start:bob": "yarn util:create:bob && cd .bob && cross-env HOST_IPV4=0.0.0.0:9092 node lib/index.js -p bob"
  },
  "engines": {
    "node": "12.9.1",
    "yarn": "1.19.2"
  },
  "pkg": {
    "scripts": [
      "require.js"
    ],
    "targets": [
      "node12-macos-x64"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hoprnet/hopr-core": "0.6.11-dev.4f49324",
    "@hoprnet/hopr-core-connector-interface": "1.2.10-98e08f8",
    "@hoprnet/hopr-core-ethereum": "0.0.12-refactor.473415f",
    "@hoprnet/hopr-demo-seeds": "1.0.3-refactor.3ad82ff",
    "@hoprnet/hopr-utils": "0.1.6-refactor.61df948",
    "@zeit/ncc": "^0.22.3",
    "bn.js": "~5.1.2",
    "chalk": "~4.1.0",
    "clear": "~0.1.0",
    "dotenv": "~8.2.0",
    "dotenv-expand": "~5.1.0",
    "figlet": "~1.4.0",
    "multihashes": "~0.4.19",
    "peer-info": "~0.17.5",
    "readline": "~1.3.0",
    "rlp": "~2.2.5",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/node": ">=4.2.0 < 13",
    "bestzip": "^2.1.5",
    "copyfiles": "^2.3.0",
    "cross-env": "^7.0.2",
    "mkdirp": "^1.0.4",
    "nexe": "^4.0.0-beta.6",
    "rimraf": "^3.0.2"
  }
}
