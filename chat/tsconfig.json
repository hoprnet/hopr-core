{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@hoprnet/hopr-core": ["../src/"],
      "@hoprnet/hopr-core/utils": ["../src/utils"],
      "@hoprnet/hopr-core/constants": ["../src/constants"]
    },
    "esModuleInterop": true,
    "outDir": "./lib",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"]
}
